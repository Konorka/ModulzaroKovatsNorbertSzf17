        <Label Content="Régebbi Kezelések:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,103,0,0"/>
        <ListBox HorizontalAlignment="Left" Height="122" VerticalAlignment="Top" Width="447" Margin="10,134,0,0"/>
        <Label Content="BNO kód:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,266,0,0"/>
